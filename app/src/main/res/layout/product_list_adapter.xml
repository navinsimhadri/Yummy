<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/fl_card_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="29dp"
            android:layout_marginRight="89dp"
            android:layout_marginBottom="29dp"
            android:layout_marginTop="29dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:id="@+id/ll_card_layout"
                android:background="#eff6f0"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView

                            android:src="@drawable/ic_breakfast"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:adjustViewBounds="true"
                            android:visibility="invisible"
                            android:scaleType="fitXY"
                            />

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_recipes_title"
                                android:text="Blue Slad"
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_recipes_cookingtime"
                                android:text="15 Ingrediance"
                                android:textColor="#525252"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_recipes_short_desc"
                                android:text="The black and blue salad, a combination of spice-rubbed, blackened chicken or steak and crumbled blue cheese, is a staple of the American gastropub menu.is a staple of the American gastropub menu. "
                                android:textColor="#525252"
                                android:textSize="14sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>



                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="9dp"
                android:paddingLeft="10dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                   android:id="@+id/iv_recipes_images"
                    android:src="@drawable/ic_breakfast"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</LinearLayout>