<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fffffd"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="#FFF"
                    android:baselineAligned="false"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_margin="15dp"
                        android:background="@drawable/dotted_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/tv_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableRight="@drawable/ic_search_black_24dp"
                            android:fontFamily="@font/productsansregular"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:inputType="text|textNoSuggestions"
                            android:background="@android:color/transparent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:hint="Search"
                            android:textColor="#aaaaaa" />


                    </LinearLayout>





                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="85"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/ll_breakfast"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.simhadri.yummy.patterns.VerticalTextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/vtv_breakfast"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|right"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/productsansregular"
                                    android:textColor="@color/black"
                                    android:text="Breakfast" />

                                <TextView
                                    android:id="@+id/tv_breakfast"
                                    android:layout_width="10dp"
                                    android:layout_height="2dp"
                                     android:rotation="90"
                                    android:background="@color/highlight_colors"
                                    android:layout_gravity="center"
                                   />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/ll_lunch"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.simhadri.yummy.patterns.VerticalTextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/vtv_lunch"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|right"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/productsansregular"
                                    android:textColor="@color/gray"
                                    android:text="Lunch" />

                                <TextView
                                    android:id="@+id/tv_lunch"
                                    android:layout_width="10dp"
                                    android:layout_height="2dp"
                                    android:rotation="90"
                                    android:visibility="invisible"
                                    android:background="@color/highlight_colors"
                                    android:layout_gravity="center"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/ll_snacks"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.simhadri.yummy.patterns.VerticalTextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/vtv_snacks"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|right"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/productsansregular"
                                    android:textColor="@color/gray"
                                    android:text="Snacks" />

                                <TextView
                                    android:id="@+id/tv_snacks"
                                    android:layout_width="10dp"
                                    android:layout_height="2dp"
                                    android:rotation="90"
                                    android:visibility="invisible"
                                    android:background="@color/highlight_colors"
                                    android:layout_gravity="center"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/ll_dinner"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.simhadri.yummy.patterns.VerticalTextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/vtv_dinner"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|right"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/productsansregular"
                                    android:textColor="@color/gray"
                                    android:text="Dinner" />

                                <TextView
                                    android:id="@+id/tv_dinner"
                                    android:layout_width="10dp"
                                    android:layout_height="2dp"
                                    android:visibility="invisible"
                                    android:rotation="90"
                                    android:background="@color/highlight_colors"
                                    android:layout_gravity="center"
                                    />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="15"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="Breakfast"
                            android:textSize="26sp"
                            android:fontFamily="@font/productsansregular"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:layout_marginLeft="25dp"
                            android:layout_marginBottom="5dp"
                            android:text="swipe right for more receipes >>>>"
                            android:textSize="14sp"
                            android:fontFamily="@font/productsansregular"
                            android:textColor="#aaa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/rv_recommended_list"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal">

                        </androidx.recyclerview.widget.RecyclerView>




                    </LinearLayout>

                </LinearLayout>






            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_weight="90"
            android:background="@drawable/above_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/bottom_navigation_options"/>

        </LinearLayout>

    </LinearLayout>






</LinearLayout>